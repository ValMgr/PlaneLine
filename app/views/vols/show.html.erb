
<%= form_with url: {:controller => "reservations", :action => "reserver", :id => @vol.id}, method: :post do |form| %>

  <h3 class="mb-5">RÃ©servation pour le vol  <%= @vol.number %></h3>

  <div class="d-flex align-items-center">
    <%= form.label :places, "Nombre de place(s): ", class: "form-check-label me-2" %>
    <%= form.number_field :places, in: 1.0..99.0, step: 1, class: "form-control" %>
  </div>

  <div class="d-flex">
    <%= form.radio_button :type_classe, "economie", class: "form-check-input me-2", :required => true , checked: true %>
    <%= form.label :type_classe_eco, "Economie", class: 'form-check-label me-1' %>
    <%= form.radio_button :type_classe, "business", class: "form-check-input me-2" %>
    <%= form.label :type_classe_business, "Business", class: 'form-check-label me-1' %>
  </div>

  <div class="d-flex mt-5">
    <%= form.submit "Valider",class: "btn btn-success submit me-2" %>
    <%= link_to 'Retour', vols_path, class: "btn btn-secondary" %>

  </div>
<% end %>


