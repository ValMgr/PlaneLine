<h2>S'enregistrer</h2>

<%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-6 row">
    <div class="col-6">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Mot de passe' %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Confirmer votre mot de passe' %>
      </div>
    </div>

    <div class="col-6">

      <div class="field">
        <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class: 'form-control', placeholder: 'Firstname' %>
      </div>

      <div class="field">
        <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", class: 'form-control', placeholder: 'Lastname' %>
      </div>

      <div class="field">
        <%= f.text_field :age, autofocus: true, autocomplete: "age", class: 'form-control', placeholder: 'Age' %>
      </div>
    </div>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>


<% end %>

<%= render "devise/shared/links" %>
